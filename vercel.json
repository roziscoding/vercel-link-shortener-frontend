{
  "rewrites": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "roz.ninja"
        }
      ],
      "destination": "/api/shortener"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "source": "/api/links/(.*)",
      "destination": "/api/links?shortcode=$1"
    },
    {
      "source": "/bot/(.+)",
      "destination": "/api/bot?token=$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/shortener?shortcode=$1"
    }
  ]
}